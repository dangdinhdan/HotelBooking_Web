@{
    ViewData["Title"] = "Danh sách phòng";
}

<section class="section">
    <h2>Danh sách phòng</h2>
    <div class="muted" id="searchSummary"></div>

    <div class="search-card" style="margin-top:16px">
        <div class="form-control" style="width:160px">
            <label class="label">Giá tối đa ($)</label>
            <input type="number" id="maxPrice" placeholder="VD: 150">
        </div>

        <div class="form-control" style="width:160px">
            <label class="label">Số khách</label>
            <select id="filterGuests">
                <option value="0">Tất cả</option>
                <option value="1">1 khách</option>
                <option value="2">2 khách</option>
                <option value="3">3 khách</option>
                <option value="4">4 khách</option>
            </select>
        </div>

        <div class="search-actions">
            <button id="filterBtn" class="btn btn-primary">Lọc phòng</button>
        </div>
    </div>

    <div style="height:12px"></div>
    <div id="roomsGrid" class="grid"></div>
</section>

@section Scripts {
    <script src="~/Scripts/No1JavaScript/Rooms.js"></script>
}
